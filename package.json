{
	"name": "coulis-monorepo",
	"private": true,
	"workspaces": [
		"benchmarks",
		"examples/*",
		"packages/*"
	],
	"scripts": {
		"sandbox:browser": "yarn workspace @example/react-browser start",
		"sandbox:server": "yarn workspace @example/react-server start",
		"benchmark:browser": "yarn workspace benchmarks benchmark:browser",
		"benchmark:server": "yarn workspace benchmarks benchmark:server",
		"start": "yarn workspace coulis build && concurrently \"yarn workspace coulis watch\" \"yarn sandbox:browser\" \"yarn sandbox:server\" --names \"lib,browser,server\"",
		"verify": "yarn lint & tsc --noEmit",
		"fix": "yarn lint --fix",
		"lint": "eslint . --ignore-path .gitignore",
		"format": "prettier . --ignore-path .gitignore --ignore-path .prettierignore --write",
		"changed": "lerna changed --all",
		"release": "lerna publish"
	},
	"directories": {
		"example": "examples"
	},
	"devDependencies": {
		"@adbayb/eslint-config": "0.10.0",
		"@adbayb/prettier-config": "0.10.0",
		"@adbayb/ts-config": "0.10.0",
		"concurrently": "7.0.0",
		"eslint": "8.11.0",
		"husky": "4.3.8",
		"lerna": "4.0.0",
		"lint-staged": "12.3.5",
		"prettier": "2.5.1",
		"typescript": "4.6.2"
	},
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/coulis.git"
	},
	"license": "MIT",
	"prettier": "@adbayb/prettier-config",
	"eslintConfig": {
		"extends": "@adbayb"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"yarn lint"
		],
		"**/*.{json,md,mdx,html,css}": [
			"yarn format"
		]
	},
	"resolutions": {
		"@typescript-eslint/eslint-plugin": "5.4.0"
	}
}
