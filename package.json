{
	"private": true,
	"workspaces": [
		"benchmarks",
		"examples/*",
		"packages/*"
	],
	"scripts": {
		"sandbox:browser": "npm start --prefix examples/react-browser",
		"sandbox:server": "npm run dev --prefix examples/react-server",
		"benchmark:browser": "npm run benchmark:browser --prefix benchmarks",
		"benchmark:server": "npm run benchmark:server --prefix benchmarks",
		"dev": "concurrently \"npm run watch --prefix packages/coulis\" \"npm run sandbox:browser\" \"npm run sandbox:server\" --names \"lib,browser,server\"",
		"format": "prettier . --ignore-path .gitignore --ignore-path .prettierignore --write",
		"lint": "eslint . --ignore-path .gitignore --fix"
	},
	"directories": {
		"example": "examples"
	},
	"devDependencies": {
		"@adbayb/eslint-config": "0.6.0",
		"@adbayb/prettier-config": "0.6.0",
		"@adbayb/ts-config": "0.6.0",
		"concurrently": "6.1.0"
	},
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/coulis.git"
	},
	"license": "MIT",
	"prettier": "@adbayb/prettier-config",
	"eslintConfig": {
		"extends": "@adbayb"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"npm run lint"
		],
		"**/*.{json,md,mdx,html,css}": [
			"npm run format"
		]
	}
}
